{
  "name": "@react-basic-kit/monorepo",
  "private": "true",
  "version": "0.0.0",
  "description": "Some basic react powered UI components",
  "license": "MIT",
  "author": "Matt Styles",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/react-basic-kit.git"
  },
  "scripts": {
    "setup": "lerna bootstrap --concurrency=1",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "lerna run build",
    "changelog": "lerna-changelog",
    "prepublish": "yarn run build && yarn run changelog",
    "publish": "lerna publish",
    "start": "yarn workspace react-basic-kit start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/",
      "**/dist/"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "standard": "^14.3.1"
  },
  "dependencies": {}
}

{
  "name": "@raid-ui/core",
  "version": "0.19.0-alpha.1",
  "description": "Core functionality for @raid-ui design system",
  "main": "lib/rk-ui-core.js",
  "module": "lib/rk-ui-core.esm.js",
  "jsnext:main": "lib/rk-ui-core.esm.js",
  "unpkg": "dist/rk-ui-core.min.js",
  "jsdelivr": "dist/rk-ui-core.min.js",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "test": "echo \"Run tests from root\" && exit 1",
    "_test": "rk test -t ui",
    "size": "size-limit",
    "build": "NODE_ENV=production rk build -t ui",
    "watch": "rk watch -t ui"
  },
  "sideEffects": false,
  "size-limit": [
    {
      "path": "lib/rk-ui-core.esm.js",
      "limit": "10 KB"
    }
  ],
  "keywords": [
    "raid",
    "ui",
    "react-kit",
    "raid-ui",
    "raid-ui-core"
  ],
  "author": {
    "name": "Matt Styles",
    "url": "https://github.com/mattstyles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/react-kit",
    "directory": "packages/@raid-ui/core/core"
  },
  "license": "MIT",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@size-limit/preset-small-lib": "^4.5.5",
    "standard": "^14.3.4"
  },
  "peerDependencies": {
    "styled-components": "^5"
  },
  "dependencies": {
    "@raid/theme": "^0.18.2",
    "@styled-system/css": "^5.1.5",
    "@styled-system/theme-get": "^5.1.2",
    "deepmerge": "^4.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}

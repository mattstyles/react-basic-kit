{
  "name": "@react-kit/core",
  "version": "0.0.0",
  "main": "lib/bkcore.js",
  "module": "lib/bkcore.esm.js",
  "jsnext:main": "lib/bkcore.esm.js",
  "unpkg": "dist/bkcore.min.js",
  "jsdelivr": "dist/bkcore.min.js",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "clean": "rimraf dist lib",
    "lint": "standard",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production rollup -c",
    "watch": "rollup -c -w",
    "size": "size-limit",
    "_prepublishOnly": "npm run test && npm run size && npm run build",
    "prepublishOnly": "npm run test && npm run build",
    "test": "tape -r @babel/register src/**/*.test.js"
  },
  "author": "Matt Styles",
  "license": "MIT",
  "keywords": [
    "design-system",
    "basic-kit"
  ],
  "side_effects": false,
  "size-limit": [
    {
      "path": "lib/bkcore.js",
      "limit": "2 KB"
    }
  ],
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.8.3",
    "babel-eslint": "^10.0.3",
    "babel-plugin-styled-components": "^1.10.6",
    "rimraf": "^3.0.1",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-terser": "^5.1.3",
    "standard": "^14.3.1",
    "tape": "^4.13.0"
  },
  "dependencies": {
    "@styled-system/css": "^5.1.4",
    "@styled-system/prop-types": "^5.1.4",
    "@styled-system/theme-get": "^5.1.2",
    "styled-system": "^5.0.15"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "styled-components": "^4.x"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  }
}
